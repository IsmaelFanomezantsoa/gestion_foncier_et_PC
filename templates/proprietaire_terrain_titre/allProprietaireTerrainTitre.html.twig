{% extends 'base.html.twig' %}

{% block title %}Tous les proprietaires des terrains titrés{% endblock %}

{% block css %}
<style> 
    {# th:nth-child(6),
    td:nth-child(6) {
    width: 120px; /* Par exemple, une largeur fixe de 200 pixels */
    max-width: 120px; /* Pour s'assurer que la largeur ne dépasse pas 200 pixels */
    white-space: nowrap; /* Pour empêcher le retour à la ligne du contenu */
    overflow: hidden; /* Pour cacher le contenu débordant */
    text-overflow: ellipsis; /* Pour afficher des points de suspension (...) si le contenu est coupé */
    } #}
    th,
    td {
    width: 80px; /* Par exemple, une largeur fixe de 200 pixels */
    max-width: 80px; /* Pour s'assurer que la largeur ne dépasse pas 200 pixels */
    white-space: nowrap; /* Pour empêcher le retour à la ligne du contenu */
    overflow: hidden; /* Pour cacher le contenu débordant */
    text-overflow: ellipsis; /* Pour afficher des points de suspension (...) si le contenu est coupé */
    }
    

</style>
{% endblock %}

{% block body %}
    <div class="title mt-2 " style =" display  : flex ; aling-items: center; justify-content : center">
        <h3>Tous les proprietaire des terrains titrés</h3>
    </div>
    
        {# <hr class="mb-3 " style="width : 75% ; margin : auto"> #}
        <hr class="mb-3" style="width : 50% ; margin : auto">
        <hr class="mb-3" style="width : 25%; margin : auto">
    <div class="container " style=" display  : flex ; aling-items: center; justify-content : flex-end">
        <a class="btn btn-secondary text-center mb-3" style="width : 30% " href={{path('app_admin_add_proprietaire_terrain_titre')}}><i class="fa fa-plus"> </i> Ajouter un nouveau Proprietaire</a>
        {# <a class="btn btn-primary text-center mb-3" style="width : 30% " href={{path('app_admin_add_terrain_titre')}}><i class="fa fa-plus"> </i> Ajouter un nouveau terrain titré</a> #}

    </div>
    <div class="content">
        <table id ="table_id" class="table  table-striped table-bordered ">
            <thead class=" table-secondary text-center" style="font-weight:bold">
                <td class="  text-center">Nom</td>
                <td class="  text-center">Prenom</td>
                <td class="  text-center">Date de naissance</td>
                <td class="  text-center">Telephone</td>
                <td class="  text-center">Adresse</td>
                {# <td>contenance</td> #}
                <td class="  text-center">Email</td>
                <td class="  text-center">CIN</td>
                <td class="  text-center">Action</td>
            </thead>
            {% for propietaireTerrainTitre in propietaireTerrainTitres %}
            
                <tr>
                    <td class="text-center"  style="font-weight:bold">{{ propietaireTerrainTitre.getNom}}</td>
                    <td class="text-center ">{{ propietaireTerrainTitre.getPrenom}}</td>
                    <td class="text-center ">{{ propietaireTerrainTitre.getDateNaissance | date("m-d-Y")}}</td>
                    <td class=" text-center">{{ propietaireTerrainTitre.getTelephone}}</td>
                    <td class=" text-center">{{ propietaireTerrainTitre.getAdresse}}</td>
                    <td class="text-center ">{{ propietaireTerrainTitre.getEmail}} </td>
                    <td class="text-center ">{{ propietaireTerrainTitre.getCin}}</td>
                    {# <td class="display : flex  ; justify-content : space-between ; flex-wrap :no-wrap"><a href={{path('app_admin_show_proprietaire_terrain_titre'  , {id: all_terrain_titre.id})}} style="text-decoration : none" class="btn btn-default btn-sm m-0"><i class="fa fa-info"> </i> </a> <a href={{path('app_admin_add_proprietaire_terrain_titre' , {id : all_terrain_titre.id})}} class="btn btn-success btn-sm m-0" style="text-decoration : none"><i class="fa fa-edit"> </i> </a> <a href={{path('app_admin_confirmation_delete_proprietaire_terrain_titre' , {id : all_terrain_titre.id})}}  class="btn btn-danger btn-sm m-0"style="text-decoration : none"> <i class="fa fa-trash"> </i></a></td> #}
                    <td class="display : flex  ; justify-content : space-between ; flex-wrap :no-wrap"><a href={{path('app_admin_show_proprietaire_terrain_titre'  , {id: propietaireTerrainTitre.id})}} style="text-decoration : none" class="btn btn-outline-default btn-sm m-0"><i class="fa fa-info"> </i> </a> <a href={{path('app_admin_add_proprietaire_terrain_titre' , {id : propietaireTerrainTitre.id})}} class="btn btn-outline-secondary btn-sm m-0" style="text-decoration : none"><i class="fa fa-edit"> </i> </a> <a href={{path('app_admin_confirmation_delete_proprietaire_terrain_titre' , {id : propietaireTerrainTitre.id})}}    class="btn btn-outline-danger btn-sm m-0"style="text-decoration : none"> <i class="fa fa-trash"> </i></a></td>
                </tr>
                 
             
            {% endfor %}
        </table>
    </div>
    <hr class="mb-3" style="width : 50% ; margin : auto">
    <hr class="mb-3" style="width : 25%; margin : auto">
    <hr class="mb-3" style="width : 13%; margin : auto">
    <hr class="mb-3" style="width : 7%; margin : auto">


{% endblock %}
