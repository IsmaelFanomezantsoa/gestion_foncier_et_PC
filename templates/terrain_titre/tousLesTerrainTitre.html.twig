{% extends 'base.html.twig' %}

{% block title %}Tous les terrains titrés{% endblock %}
{% block css %}
<style> 
    {# th:nth-child(6),
    td:nth-child(6) {
    width: 120px; /* Par exemple, une largeur fixe de 200 pixels */
    max-width: 120px; /* Pour s'assurer que la largeur ne dépasse pas 200 pixels */
    white-space: nowrap; /* Pour empêcher le retour à la ligne du contenu */
    overflow: hidden; /* Pour cacher le contenu débordant */
    text-overflow: ellipsis; /* Pour afficher des points de suspension (...) si le contenu est coupé */
    } #}
    th,
    td {
    width: 80px; /* Par exemple, une largeur fixe de 200 pixels */
    max-width: 80px; /* Pour s'assurer que la largeur ne dépasse pas 200 pixels */
    white-space: nowrap; /* Pour empêcher le retour à la ligne du contenu */
    overflow: hidden; /* Pour cacher le contenu débordant */
    text-overflow: ellipsis; /* Pour afficher des points de suspension (...) si le contenu est coupé */
    }
    

</style>
{% endblock %}
{% block body %}
    <div class="title mt-2 " style =" display  : flex ; aling-items: center; justify-content : center">
        <h3>Tous les terrains titrés</h3>
    </div>
    
        {# <hr class="mb-3 " style="width : 75% ; margin : auto"> #}
        <hr class="mb-3" style="width : 50% ; margin : auto">
        <hr class="mb-3" style="width : 25%; margin : auto">
    <div class="container " style=" display  : flex ; aling-items: center; justify-content : flex-end">
        <a class="btn btn-primary text-center mb-3" style="width : 30% " href={{path('app_admin_add_terrain_titre')}}><i class="fa fa-plus"> </i> Ajouter un nouveau terrain titré</a>

    </div>
    <div class="content">
        <table id ="table_id" class="table  table-striped table-bordered ">
            <thead class=" table-primary text-center" style="font-weight:bold">
                <td class=" table-primary text-center">n_terrain</td>
                <td class=" table-primary text-center">Nom terrain</td>
                <td class=" table-primary text-center">Fokotany</td>
                <td class=" table-primary text-center">Zone PUDi</td>
                <td class=" table-primary text-center">Superficie</td>
                {# <td>contenance</td> #}
                <td class=" table-primary text-center">Proprietaire</td>
                <td class=" table-primary text-center">CIN proprietaire</td>
                <td class=" table-primary text-center">Action</td>
            </thead>
            {% for all_terrain_titre in all_terrain_titres %}
            
                <tr>
                    <td class="text-center"  style="font-weight:bold">{{ all_terrain_titre.getNTitre}}</td>
                    <td class="text-center ">{{ all_terrain_titre.getNomTerrainTitre}}</td>
                    <td class="text-center ">{{ all_terrain_titre.getFkt}}</td>
                    <td class=" text-center">{{ all_terrain_titre.getZonePudi}}</td>
                    <td class=" text-center">{{ all_terrain_titre.getSuperficie}}</td>
                    {# <td class=" "  style="font-weight:bold">{{ all_terrain_titre.getContenances.}}</td> #}
                    <td class="text-center ">{{ all_terrain_titre.getProprietaireTerrainTitre.getNom}} {{ all_terrain_titre.getProprietaireTerrainTitre.getPrenom}}</td>
                    <td class="text-center ">{{ all_terrain_titre.getProprietaireTerrainTitre.getCin}}</td>
                    <td class="display : flex  ; justify-content : space-between ; flex-wrap :no-wrap"><a href={{path('app_admin_show_terrain_titre'  , {id: all_terrain_titre.id})}} style="text-decoration : none" class="btn btn-outline-default btn-sm m-0"><i class="fa fa-info"> </i> </a> <a href={{path('app_admin_add_terrain_titre' , {id : all_terrain_titre.id})}} class="btn btn-outline-primary btn-sm m-0" style="text-decoration : none"><i class="fa fa-edit"> </i> </a> <a href={{path('app_admin_confirmation_delete_terrain_titre' , {id : all_terrain_titre.id})}}  class="btn btn-outline-danger btn-sm m-0"style="text-decoration : none"> <i class="fa fa-trash"> </i></a></td>
                </tr>
                 
             
            {% endfor %}
        </table>
    </div>
    <hr class="mb-3" style="width : 50% ; margin : auto">
    <hr class="mb-3" style="width : 25%; margin : auto">
    <hr class="mb-3" style="width : 13%; margin : auto">
    <hr class="mb-3" style="width : 7%; margin : auto">


{% endblock %}
{% block javascript %}
    <script>
        $(document).ready(function() {
            $('#table_id').DataTable();
        });
    </script>
{% endblock %}  