{% extends 'baseSecurity.html.twig' %}

{% block title %}Authentification {% endblock %}

{% block body %}
        <div class="container-fluid col-lg-4 col-md-6  col-sm-12 mt-5" style=" padding : 20px">
            <form method="post" class="">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
            
                <h3 class="h3 mb-3 font-weight-normal text-center">Authentification</h3>
                <div class="">
                    <label for="inputCin" class="mt-3">Carte d'identit√© nationale</label>
                    <input type="text" value="{{ last_username }}" name="cin" id="inputCin" class="form-control mt-1 " autocomplete="username" required autofocus>
                </div> 
                <div class=""> 
                    <label for="inputPassword" class="mt-3">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mt-1 " autocomplete="current-password" required>
                </div>
                
                <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                
                <div class="">

                    <div class="checkbox mb-1 mt-1">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                
            
                    
                    <div class="row center d-flex justify-content-center " >
                        <a  class="btn  btn-outline-secondary  col-md-5 col-sm-12 m-1" href={{ path('app_register') }}>S'inscrire</a>
                        <button  class="btn  btn-primary col-md-5 col-sm-12 m-1" type="submit">Se connecter</button>
                    </div>

                </div>
            </form>
        </div>
{% endblock %}
