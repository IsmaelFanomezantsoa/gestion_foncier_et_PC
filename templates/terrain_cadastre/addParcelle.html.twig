{% extends 'base.html.twig' %}

{% block title %}{{titre}}{% endblock %}

{% block body %}
    <div class="title mt-2 " style =" display  : flex ; aling-items: center; justify-content : center">
        <h3>{{titre}}</h3>
    </div>
    <div >
         {{form_start(form)}}
            <div class="row">
                <div class="col">
                    {{form_row(form.n_parcelle)}}
                </div>
                <div class="col">
                    {{form_row(form.superficie_parcelle)}}
                </div>
            </div>
             
            <div class="row">
                <div class="col"> 
                    <label>N_titre du du cadastre :</label>
                    <input class="form form-control mt-2" 
                        {% if terrainCible %}
                            value = {{ terrainCible.getNTitre }}
                        {% endif %}
                    
                    name="n titre">
                </div>
                <div class="col">
                    {# {{form_row(form.cin_proprietaire)}} #}
                    <label>CIN du proprietaire de la parcelle :</label>
                    <input class="form form-control mt-2" 
                    
                        {% if new == false %}
                            value = {{ parcelleCible.getProprietaireParcelle.getCin }}
                        {% endif %}
                    
                    name="cin proprietaire">
                </div>
            </div>
             
         {{form_end(form)}}
    </div>



{% endblock %}
