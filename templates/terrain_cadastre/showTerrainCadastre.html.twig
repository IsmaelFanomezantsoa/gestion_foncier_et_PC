{% extends 'base.html.twig' %}

{% block title %}A propos du cadastre{% endblock %}

{% block body %}
    <div style="display:flex; justify-content : center" class="mb-2 mt-3">
        <h3>A propos du cadastre </h3>  
    </div>
    <hr class="mb-3" style="width : 50% ; margin : auto">
    <hr class="mb-3" style="width : 25%; margin : auto">
 
    <div  class=" row mb-2 mt-3">
        <h6 class="col">N_titre : <span style="font-weight: normal">{{terrainCadastres.getNTitre}}</span></h6>  
        <h6  class="col">Nom terrain : <span style="font-weight: normal">{{terrainCadastres.getNomCadastre}}</span></h6>  
    </div><hr>
    <div  class=" row mb-2 mt-3">
        <h6 class="col">Fokotany : <span style="font-weight: normal">{{terrainCadastres.getFkt}}</span></h6>  
        <h6  class="col">Superficie : <span style="font-weight: normal">{{terrainCadastres.getSuperficie}}</span></h6>  
    </div><hr>
    <div  class=" row mb-2 mt-3">
        <h6 class="col">Zone PUDi : <span style="font-weight: normal">{{terrainCadastres.getZonePudi}}</span></h6>  
        <h6  class="col">Nombre de parcelle : <span style="font-weight: normal">{{terrainCadastres.getNbParcelle}}</span></h6>  
    </div><hr>  
     <div style="display:flex; justify-content : center" class="mb-2 mt-3">
        <h3>Parcelles </h3>  
    </div>
     <hr class="mb-3" style="width : 50% ; margin : auto">
    <hr class="mb-3" style="width : 25%; margin : auto">
    <div class="container " style=" display  : flex ; aling-items: center; justify-content : flex-start">
        <a class="btn btn-primary text-center mb-3" style="width : 30% " href={{path('app_admin_add_parcelle_terrain_cadastre',{'idTerrain':terrainCadastres.getId})}}><i class="fa fa-plus"> </i> Ajouter une nouvelle Parcelle</a>
         
    </div>

{# /////////// #}
    <div class="content">
        <table id ="table_id" class="table  table-striped table-bordered ">
            <thead class=" table-primary text-center" style="font-weight:bold">
                <td class=" table-primary text-center">N_parcelle</td>
                <td class=" table-primary text-center">Superficie Parcelle </td>
                <td class=" table-primary text-center">Propriétaire Parcelle </td>
                <td class=" table-primary text-center">CIN propriétaire parcelle </td>
                <td class=" table-primary text-center">Action</td>
            </thead>
            {% for parcelle in parcelles %}
            
                <tr>
                    <td class="text-center"  style="font-weight:bold">{{ parcelle.getNParcelle}}</td>
                    <td class="text-center ">{{ parcelle.getSuperficieParcelle}}</td>
                    <td class="text-center"  style="font-weight:bold">{{ parcelle.getProprietaireParcelle.getNom}} {{ parcelle.getProprietaireParcelle.getPrenom}}</td>
                    <td class="text-center ">{{ parcelle.getProprietaireParcelle.getCin}}</td>
                    <td class="display : flex  ; justify-content : space-between ; flex-wrap :no-wrap text-center"><a href={{path('app_admin_show_parcelle_terrain_cadastre'  , {id: parcelle.id})}} style="text-decoration : none" class="btn btn-outline-default btn-sm m-0"><i class="fa fa-info"> </i> </a>  <a href={{path('app_admin_add_parcelle_terrain_cadastre' , {id : parcelle.id ,'idTerrain':terrainCadastres.getId})}} class="btn btn-outline-primary btn-sm m-0" style="text-decoration : none"><i class="fa fa-edit"> </i> </a> <a href= {{path('app_admin_confirmation_delete_parcelle_terrain_cadastre' , {id : parcelle.id})}}  class="btn btn-outline-danger btn-sm m-0"style="text-decoration : none"> <i class="fa fa-trash"> </i></a></td>
                    {# <td class="display : flex  ; justify-content : space-between ; flex-wrap :no-wrap"><a href={{path('app_admin_show_parcelle_terrain_cadastre'  , {id: all_terrain_titre.id})}} style="text-decoration : none" class="btn btn-outline-default btn-sm m-0"><i class="fa fa-info"> </i> </a> <a href={{path('app_admin_add_parcelle_terrain_cadastre' , {id : all_terrain_titre.id})}} class="btn btn-outline-primary btn-sm m-0" style="text-decoration : none"><i class="fa fa-edit"> </i> </a> <a href={{path('app_admin_confirmation_delete_terrain_titre' , {id : all_terrain_titre.id})}}  class="btn btn-outline-danger btn-sm m-0"style="text-decoration : none"> <i class="fa fa-trash"> </i></a></td> #}
                </tr>
                 
             
            {% endfor %}
        </table>
    </div>



{# ///////////// #}


<hr>
     <div style="display:flex; justify-content : center" class="mb-2 mt-3">
        <h3>Image du plan du cadastre </h3>  
    </div>
     <hr class="mb-3" style="width : 50% ; margin : auto">
    <hr class="mb-3" style="width : 25%; margin : auto">


    
    <div  class=" row mb-2 mt-3">
        <img  class="img-fluid img-thumbnail" style = "width : 100% ; height : auto ; object-fit : cover; " src={{ asset('uploads/Image_du_plan_cadastre/' ~ terrainCadastres.getImage) }} alt"image du terrain"/>
    </div>
    <hr class="mb-3" style="width : 50% ; margin : auto">
    <hr class="mb-3" style="width : 25%; margin : auto">
    <hr class="mb-3" style="width : 13%; margin : auto">
    <hr class="mb-3" style="width : 7%; margin : auto">



{% endblock %}
